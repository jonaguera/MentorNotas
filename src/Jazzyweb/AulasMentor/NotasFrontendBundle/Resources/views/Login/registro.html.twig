{% extends '::base.html.twig' %}
{% block stylesheets%}
<link href="{{ asset('bundles/jamnotasfrontend/vendors/jquery/css/ui-lightness/jquery-ui-1.8.17.custom.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('bundles/jamnotasfrontend/vendors/jquery-layout/css/layout-default-latest.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('bundles/jamnotasfrontend/css/ui.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('bundles/jamnotasfrontend/css/mentornotas.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('bundles/jamnotasfrontend/css/ui-forms.css') }}" type="text/css" rel="stylesheet" />
{% endblock%}

{% block javascripts %}
<script src="{{ asset('bundles/jamnotasfrontend/vendors/jquery/js/jquery-1.7.1.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/jamnotasfrontend/vendors/jquery/js/jquery-ui-1.8.17.custom.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/jamnotasfrontend/vendors/jquery-layout/js/jquery.layout.min-1.2.0.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/jamnotasfrontend/js/ui.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}

<div id="mentornotas-wrapper">
    {% include 'JAMNotasFrontendBundle:Notas:cabecera_mini.html.twig' %}


<div class="mentornotas-content-login">
 <h1>Reg√≠strate</h1>
 <div>
     <form novalidate="true" action="{{ path("jamn_registro") }}"
           method="post" id="login">

     {% if form_errors(form) %}
         <div class="error">{{ form_errors(form) }}</div>
     {% endif %}

         <div>
     {% if form_errors(form.nombre ) %}
                 <div class="error">{{ form_errors(form.nombre ) }}</div>
     {%endif%}
                 <label for="nombre">Tu nombre:</label>
                {{ form_widget(form.nombre) }}
             </div>

             <div>
         {% if form_errors(form.apellidos ) %}
                     <div class="error">{{ form_errors(form.apellidos ) }}
                     </div>
         {%endif%}
                     <label for="apellidos">Apellidos:</label>
             {{ form_widget(form.apellidos) }}
             </div>

             <div>
         {% if form_errors(form.username ) %}
                         <div class="error">{{ form_errors(form.username ) }}
                         </div>
         {%endif%}
                         <label for="username">Username:</label>
             {{ form_widget(form.username) }}
             </div>

              <div>
         {% if form_errors(form.email ) %}
                             <div class="error">{{ form_errors(form.email ) }}
                             </div>
         {%endif%}
                             <label for="email">Email:</label>
            {{ form_widget(form.email) }}

              </div>

          <div>
         {% if form_errors(form.password ) %}
                             <div class="error">
                               {{ form_errors(form.password ) }}
                             </div>
         {%endif%}
                             <label for="password">Password:</label>
            {{ form_widget(form.password) }}

              </div>

          <div>
         {% if form_errors(form.password_again ) %}
                             <div class="error">
                               {{ form_errors(form.password_again ) }}
                             </div>
         {%endif%}
                             <label for="password_again">Password(otra vez):
                             </label>
            {{ form_widget(form.password_again) }}

              </div>

             {{ form_rest(form) }}
               <input type="submit" class="mentornotas-button-grey" value="Adelante" />
           </form>
        </div>
   </div>
            
            </div>


{% endblock %}